@model IEnumerable<SaarSystem.Models.PreventiveMaintenance>

@{
    ViewData["Title"] = "Preventive Maintenances";
}

<h1>Preventive Maintenances</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Preventive Maintenance</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Equipment.Name)</th>
            <th>@Html.DisplayNameFor(model => model.MaintenanceDate)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Equipment.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.MaintenanceDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PreventiveMaintenanceId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PreventiveMaintenanceId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PreventiveMaintenanceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>